class Command(BaseCommand):
    help = 'Converts CSV to useful JSON formats'

    def add_arguments(self, parser):
        parser.add_argument(
            '--month',
            type=valid_date)
        parser.add_argument(
            '--min-practice-saving',
            type=int, default=50)
        parser.add_argument(
            '--min-ccg-saving',
            help="Disregard savings under this amount",
            type=int, default=1000)
        parser.add_argument(
            '--limit',
            help="Maximum number of savings to return",
            type=int, default=0)

    def handle(self, *args, **options):
        '''
        Compute and store cost savings for the specified month.

        Deletes any existing data for that month.
        '''
        if not options['month']:
            last_prescribing = ImportLog.objects.latest_in_category(
                'prescribing').current_at
