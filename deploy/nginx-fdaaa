upstream fdaaa {
    server unix:/tmp/gunicorn-fdaaa.sock fail_timeout=0;
    keepalive 60;
}

server {
    listen 80;
    listen [::]:80;
    server_name fda.trialstracker.net fdaa.trialstracker.net trialstracker.net;
    rewrite ^/(.*)$ https://fdaaa.trialstracker.net/$1 redirect;
}

# Listen on HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name fdaaa.trialstracker.net;

    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    client_max_body_size 200M;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_pass http://fdaaa;
    }

    location /static {
        alias   /var/www/fdaaa/clinicaltrials-act-tracker/clinicaltrials/static;
        expires max;
        access_log off;
    }
}
